        </insert>
    </changeSet>

    <changeSet id="1.0.7" author="izvarin.andrey">
        <insert tableName="user_roles">
            <column name="user_id" value="1"/>
            <column name="role_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.8" author="izvarin.andrey">
        <insert tableName="user_roles">
            <column name="user_id" value="1"/>
            <column name="role_id" value="2"/>
        </insert>
    </changeSet>
</databaseChangeLog >